#include "robot-config.h"
/*---------------------------------------------------------------------------*/
/*                                                                           */
/*        Description: Competition template for VCS VEX V5                   */
/*                                                                           */
/*---------------------------------------------------------------------------*/

//Creates a competition object that allows access to Competition methods.
vex::competition    Competition;

void pre_auton( void )
{
    LeftMotor.resetRotation();
    RightMotor.resetRotation();
}

void autonomous( void )
{
    LeftMotor.spin(directionType::fwd,75,velocityUnits::rpm);
    RightMotor.spin(directionType::fwd,75,velocityUnits::rpm);
    
}

void usercontrol( void ) 
{
  // User control code here, inside the loop
    while (1)
    {
        LeftY = Controller1.Axis3.position(percentUnits::pct);
        LeftX = Controller1.Axis4.position(percentUnits::pct);
        RightY = Controller1.Axis2.position(percentUnits::pct);
        RightX = Controller1.Axis1.position(percentUnits::pct);
        LeftMotor.spin(directionType::fwd,LeftY,velocityUnits::pct);
        RightMotor.spin(directionType::fwd,RightY,velocityUnits::pct);
        
    }
}

int main() 
{ 
    pre_auton();
    Competition.autonomous( autonomous );
    Competition.drivercontrol( usercontrol );                        
    
    while(1) 
    {
      vex::task::sleep(100);//Sleep the task for a short amount of time to prevent wasted resources.
    }          
}
